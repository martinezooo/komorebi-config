{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.37/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 15,
  "default_container_padding": 15,
  "border": true,
  "border_width": 6,
  "border_offset": -1,
  "theme": {
    "palette": "Base16",
    "name": "Ashes",
    "unfocused_border": "Base03",
    "bar_accent": "Base0D"
  },
  "initial_workspace_rules": [
    {
      "kind": "Exe",
      "id": "devenv.exe",
      "matching_strategy": "Legacy",
      "monitor_index": 1,
      "workspace_name": "CODE"
    },
    {
      "kind": "Exe",
      "id": "Code.exe",
      "matching_strategy": "Legacy",
      "monitor_index": 1,
      "workspace_name": "CODE"
    },
    {
      "kind": "Exe",
      "id": "firefox.exe",
      "matching_strategy": "Legacy",
      "monitor_index": 1,
      "workspace_name": "WEB"
    },
    {
      "kind": "Exe",
      "id": "chrome.exe",
      "matching_strategy": "Legacy",
      "monitor_index": 1,
      "workspace_name": "WEB"
    },
    {
      "kind": "Exe",
      "id": "WindowsTerminal.exe",
      "matching_strategy": "Legacy",
      "monitor_index": 1,
      "workspace_name": "TERM"
    },
    {
      "kind": "Exe",
      "id": "pwsh.exe",
      "matching_strategy": "Legacy",
      "monitor_index": 1,
      "workspace_name": "TERM"
    },
    {
      "kind": "Exe",
      "id": "notepad.exe",
      "matching_strategy": "Legacy",
      "monitor_index": 1,
      "workspace_name": "FOCUS"
    },
    {
      "kind": "Exe",
      "id": "CalculatorApp.exe",
      "matching_strategy": "Legacy",
      "monitor_index": 1,
      "workspace_name": "QUICK"
    }
  ],
  "window_container_behaviour": "Create",
  "auto_manage_workspace_creation": true,
  "new_window_behaviour": "Create",
  "default_workspace_creation": true,
  "monitors": [
    {
      "workspaces": [
        {
          "name": "GPD-1",
          "layout": "BSP"
        },
        {
          "name": "GPD-2",
          "layout": "BSP"
        },
        {
          "name": "GPD-3",
          "layout": "BSP"
        },
        {
          "name": "GPD-4",
          "layout": "BSP"
        },
        {
          "name": "GPD-5",
          "layout": "BSP"
        },
        {
          "name": "GPD-6",
          "layout": "BSP"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "CODE",
          "layout": "Columns"
        },
        {
          "name": "WEB",
          "layout": "VerticalStack"
        },
        {
          "name": "TERM",
          "layout": "HorizontalStack"
        },
        {
          "name": "DOCS",
          "layout": "UltrawideVerticalStack"
        },
        {
          "name": "TOOLS",
          "layout": "Rows"
        },
        {
          "name": "MEDIA",
          "layout": "Grid"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "FOCUS",
          "layout": "BSP"
        },
        {
          "name": "QUICK",
          "layout": "BSP"
        },
        {
          "name": "NEW-1",
          "layout": "BSP"
        },
        {
          "name": "NEW-2", 
          "layout": "BSP"
        },
        {
          "name": "NEW-3",
          "layout": "BSP"
        }
      ]
    }
  ]
}
